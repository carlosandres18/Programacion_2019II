@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model invoice_web_caon.models.reporte

<!DOCTYPE html>
<html>
    <header>
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
    <body>
        <div class="container" style="margin-top:50px">
          <div class="row justify-content-center">
            <div class="col-8" style="border: black 2px dashed">
              <h1 style="color:#0080ff;text-align:center">Invoice</h1><br>
              <form asp-controller="Home" asp-action="Calculo">
                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Cliente:</strong></label>
                  <div class="col-sm-3">
                  <input asp-for="cliente" placeholder="Nombre completo"/>
                  </div>
                </div>
                
                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Cantidad:</strong></label>
                  <div class="col-sm-3">
                  <input asp-for="cantidad" placeholder="Cantidad producto">
                  </div>
                </div>

                <fieldset class="form-group">
                  <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0"><strong>Producto:</strong></legend>
                    <div class="col-sm-3">
                      <div class="form-check">
                        <input asp-for="producto" class="form-check-input" type="radio" value="100">
                        <label>Producto 1</label>
                      </div>
                      <div class="form-check">
                        <input asp-for="producto" class="form-check-input" type="radio" value="50">
                        <label>Producto 2</label>
                      </div>
                      <div class="form-check">
                        <input asp-for="producto" class="form-check-input" type="radio" value="80">
                        <label>Producto 3</label>
                      </div>
                    </div>
                  </div>
                </fieldset>

                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Fecha:</strong></label>
                  <div class="col-sm-3">
                  <input asp-for="Date">
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-3">
                  <button type="submit" class="btn btn-primary">REGISTRAR</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
    </body>
</html>