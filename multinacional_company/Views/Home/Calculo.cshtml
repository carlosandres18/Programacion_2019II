@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model multinacional_company.models.reporte

<!DOCTYPE html>
<html>
    <header>
    <title>Calculo</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
    <body>
        <div class="container" style="margin-top:50px">
            <div class="row justify-content-center">
                <div class="col-4">
                    <ul class="list-group">
                        <li class="list-group-item active" style="text-align:center"><h1>Reporte</h1></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Nombre del producto:
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayTextFor(model => model.producto)
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Categor√≠a:
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayTextFor(model => model.categoria)
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Nacionalidad:
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayTextFor(model => model.nacionalidad)
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Precio Total:
                            <span class="badge badge-primary badge-pill">
                                @Html.DisplayTextFor(model => model.precioT)
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>   
    </body>
</html>